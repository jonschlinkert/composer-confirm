{
  "name": "composer-confirm",
  "description": "Uses [enquirer] to conditionally run composer tasks based on responses to prompts. Also works with assemble, generate, verb and update.",
  "version": "1.0.0",
  "homepage": "https://github.com/jonschlinkert/composer-confirm",
  "author": "Jon Schlinkert (https://github.com/jonschlinkert)",
  "repository": "jonschlinkert/composer-confirm",
  "bugs": {
    "url": "https://github.com/jonschlinkert/composer-confirm/issues"
  },
  "license": "MIT",
  "files": [
    "index.js"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha"
  },
  "dependencies": {
    "prompt-confirm": "^1.0.2"
  },
  "devDependencies": {
    "composer": "^0.14.2",
    "gulp-format-md": "^0.1.12",
    "mocha": "^3.4.2"
  },
  "keywords": [
    "composer",
    "confirm"
  ],
  "verb": {
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [
        "assemble",
        "enquirer",
        "generate",
        "update",
        "verb"
      ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "composer",
      "enquirer"
    ]
  }
}
